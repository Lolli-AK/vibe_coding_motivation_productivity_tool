{
  "name": "focusrecap",
  "version": "1.0.0",
  "description": "AI-powered productivity tracking app that captures screenshots and provides motivational summaries",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "productivity",
    "ai",
    "screenshots",
    "macos"
  ],
  "author": "FocusRecap Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.7",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.6",
    "tesseract.js": "^5.0.2"
  },
  "build": {
    "appId": "com.focusrecap.app",
    "productName": "FocusRecap",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ]
  }
}
